# EditorConfig (https://editorconfig-specification.readthedocs.io/)
[*]
indent_style = space
indent_size = 4
tab_width = 4
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8-bom

[*.{csproj,runsettings}]
indent_size = 2
tab_width = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2
tab_width = 2

[*.{json,code-workspace}]
indent_size = 2
tab_width = 2

[*.{http}]
indent_size = 2
tab_width = 2

[*.{css}]
indent_size = 2
tab_width = 2

[*.{yml,yaml}]
indent_size = 2
tab_width = 2

[*.md]
indent_size = 2
tab_width = 2
trim_trailing_whitespace = false

[*.gitconfig]
indent_style = tab

[*.sh]
end_of_line = lf
charset = utf-8

# .NET (https://aka.ms/editorconfigdocs)
[*.{cs,csx,vb,vbx}]
dotnet_sort_system_directives_first = true
